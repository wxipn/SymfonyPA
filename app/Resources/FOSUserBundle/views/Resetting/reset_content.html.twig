{% trans_default_domain 'FOSUserBundle' %}

<!-- Heading Row -->
<div class="row">
    <div class="col-md-6 col-md-offset-3 well">	
        {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'form-horizontal' } }) }}
        <fieldset>
            <div class="form-group">
                <div class="col-md-12">
                    {{ form_label(form.plainPassword.first) }}
                </div>
                <div class="col-md-12">
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    {{ form_label(form.plainPassword.second) }}
                </div>
                <div class="col-md-12">
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Répéter'}}) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-block btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" value="{{ 'resetting.reset.submit'|trans }}">Modifier le mot de passe</button>
                </div>
            </div>
        </fieldset>
        {{ form_end(form) }}
    </div>
</div>
<!-- /.row -->
