{% trans_default_domain 'FOSUserBundle' %}
<!-- Heading Row -->
<div class="row">
    {% include 'UtilisateursBundle:Default:ModulesUsed/menu_utilisateur.html.twig' %}
    <!-- /.col-md-9 -->
    <div class="col-md-9">
        <div class="well">
            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'form-horizontal' } }) }}
            <fieldset>
                <legend>Modifier le mot de passe</legend>
                <div class="form-group">
                    <div class="col-md-4">
                        {{ form_label(form.current_password) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
                        <span class="form_error_field">{{ form_errors(form.current_password) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        {{ form_label(form.plainPassword.first) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                        <span class="form_error_field">{{ form_errors(form.plainPassword.first) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        {{ form_label(form.plainPassword.second) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                        <span class="form_error_field">{{ form_errors(form.plainPassword.second) }}</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-8 col-md-offset-4">
                        <button type="submit" class="btn btn-primary" value="{{ 'change_password.submit'|trans }}">Modifier le mot de passe</button>
                    </div>
                </div>
            </fieldset>
            {{ form_end(form) }}
        </div>
    </div>
</div>
<!-- /.row -->
